<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
          <shape>
        
	      <gradient
	          android:startColor="@color/grey_main"
	          android:endColor="@color/grey_main"
	          android:angle="270" />
	       <solid
	          android:color="@color/grey_main" />
	      <stroke
	          android:width="1dp"
	          android:color="@color/blue_main" />
	      <corners
	          android:radius="6dp" />
	      <padding 
	          android:left="3dp"
	          android:right="3dp"
	          android:top="3dp"
	          android:bottom="3dp"/>
	    	</shape>
    </item>
    <item  >
